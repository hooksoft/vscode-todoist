{
  "name": "todoist",
  "displayName": "todoist",
  "description": "Use Todoist  for managing project-scoped todos",
	"version": "0.0.1",
	"publisher": "waymondo",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
		"onCommand:extension.todoistCapture",
		"onCommand:extension.todoistOpen",
		"onCommand:extension.todoistTodos"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.todoistCapture",
        "title": "Todoist Capture"
			},
			{
				"command": "extension.todoistOpen",
				"title": "Todoist Open"
			},
			{
				"command": "extension.todoistTodos",
				"title": "Todoist Todos"
			}
    ],
    "keybindings": [
      {
        "command": "extension.todoistCapture",
        "key": "alt+t c"
      },
      {
        "command": "extension.todoistOpen",
        "key": "alt+t o"
      },
      {
        "command": "extension.todoistTodos",
        "key": "alt+t t"
      }
    ],
    "configuration": [
      {
        "title": "Todoist",
        "properties": {
          "todoist.apiToken": {
            "type": "string",
            "default": null,
            "description": "Your Todoist API Token",
            "scope": "application"
					},
					"todoist.projectId": {
            "type": "string",
            "default": null,
            "description": "Your global or workspace-specific project ID",
            "scope": "window"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.4",
    "@types/vscode": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  }
}
